{% extends 'layouts/base.twig' %}

{% block main_content %}
    <h1>All Products</h1>
    <ul>
        {% for product in products %}
            <li>
                {{ product.name }} - 
                <a href="/products/{{ product.id }}/edit">Edit</a>
                <a href="/products/{{ product.id }}/delete">Delete</a>            
            </li>
        {% endfor %}
    </ul>
    <p>
        <a href="/products/new">Create New</a>
    </p>
{% endblock %}